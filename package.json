{
  "name": "ts-node-project-setup",
  "version": "1.0.0",
  "description": "setup completo para projetos Node.js, utilizando TypeScript, ESLint & Prettier, Jest, Husky & Lint Staged (commit hooks)",
  "main": "index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsup src",
    "start": "node dist/server.js",
    "start:dev": "tsx watch src/server.ts",
    "full-lint": "eslint src --ext .ts,.tsx,.js,.jsx --fix --max-warnings=0",
    "husky:prepare": "husky install",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:staged": "npm test --findRelatedTests",
    "test:push": "npm test --coverage"
  },
  "author": "Â¡Duque",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitest/coverage-c8": "^0.27.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "prisma": "^4.11.0",
    "tsc-alias": "^1.8.2",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4",
    "vitest": "^0.27.2",
    "zod": "^3.20.2"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "fastify": "^4.14.0"
  }
}
